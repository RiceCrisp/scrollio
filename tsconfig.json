{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "dist"],
  "outDir": "dist",
  "declaration": true
}
